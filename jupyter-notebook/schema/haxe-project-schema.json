{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Haxe Project",
    "description": "Schema for a Haxe project",
    "type": "object",
    "oneOf": [
        {
            "properties": {
                "framework": {
                    "description": "What type of haxe project",
                    "type": "string",
                    "enum": [
                        "Haxeflixel",
                        "Haxe Punk",
                        "OpenFL",
                        null
                    ]
                },
                "framework-options": {
                    "if": {
                        "properties": {
                            "framework": {
                                "const": "Haxeflixel"
                            }
                        }
                    },
                    "then": {
                        "oneOf": [
                            {
                                "properties": {
                                    "options": {
                                        "description": "project options",
                                        "type": "object"
                                    }
                                }
                            }
                        ],
                        "properties": {
                            "options": {
                                "description": "project options",
                                "type": "object",

                                "oneOf": [
                                    {
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            }
                                        },
                                        "required": ["name"]
                                    }
                                ]
                            }
                        },
                        "required": [
                            "options"
                        ]
                    }
                }
            },
            "required": [
                "framework",
                "framework-options"
            ]
        }
    ]
}